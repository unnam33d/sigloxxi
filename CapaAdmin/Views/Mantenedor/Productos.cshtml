@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>
<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Productos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-boxes me-1">
        </i> Lista de Productos
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Producto</button>
            </div>
        </div>
    </div>

    <hr />

    <table id="tabla" class="display d-print-table-cell" style="width: 100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Receta</th>
                <th>Ingredientes</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Activo</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Productos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtid" type="text" value="0" />

                <form id="contenedor" class="row">

                    <div class="col-sm-3">
                        <div class="mb-2">
                            <img id="img_producto" height="197" width="200" class="border rounded mx-auto d-block img-fluid" />
                        </div>
                        <div class="mb-2">
                            <input class="form-control" type="file" id="fileProducto" accept="image/png, image/jpg, image/jpeg" onchange="mostrarImagen(this)" />
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="txtnombre" name="nombreproducto" autocomplete="off" />
                        </div>


                        <div class="mb-3">
                            <label class="form-label">Receta</label>
                            <textarea type="text" class="form-control" id="txtreceta" name="receta" style="height:125px;resize:none" autocomplete="off"></textarea>
                        </div>


                    </div>


                    <div class="col-sm-3">


                        <div class="mb-3">
                            <label class="form-label">Ingrediente 1</label>
                            <select id="cmbIngrediente1" class="form-select"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ingrediente 2</label>
                            <select id="cmbIngrediente2" class="form-select"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ingrediente 3</label>
                            <select id="cmbIngrediente3" class="form-select"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ingrediente 4</label>
                            <select id="cmbIngrediente4" class="form-select"></select>
                        </div>                        
                    </div>

                    <div class="col-sm-3">

                        <div class="mb-3">
                            <label class="form-label">Precio</label>
                            <input type="text" class="form-control" id="txtprecio" name="precio" autocomplete="off" />
                        </div>

                        <div class="mb-3">
                            <label for="cmbActivo" class="form-label">Activo</label>
                            <select id="cmbActivo" class="form-select">
                                <option value="1">Si</option>
                                <option value="0">No</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Categoria</label>
                            <select id="cmbCategoria" class="form-select"></select>
                        </div>
                    </div>

                </form>

                <!--Mensaje de alerta-->
                <div class="row mt-3">
                    <div class="col-12">

                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            This is a danger alert—check it out!
                        </div>

                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

