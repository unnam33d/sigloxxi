        function abrirModal(json) {

            if (json != null) {

                $("#txtid").val(json.IdIngrediente);
                $("#txtnombre").val(json.NombreProducto);
                $("#txtreceta").val(json.Receta);
                $("#cmbIngrediente1").val(json.oIngrediente.IdIngrediente);
                $("#cmbIngrediente2").val(json.oIngrediente.IdIngrediente);
                $("#cmbIngrediente3").val(json.oIngrediente.IdIngrediente);
                $("#cmbIngrediente4").val(json.oIngrediente.IdIngrediente);
                $("#cmbCategoria").val(json.oCategoria.IdCategoria);
                $("#txtprecio").val(json.Precio);
                $("#cmbActivo").val(json.Activo == true ? 1 : 0);

                $("#mensajeError").hide();



            } else {

                $("#txtid").val(0);
                $("#img_producto").removeAttr("src");
                $("#fileProducto").val("");
                $("#txtnombre").val("");
                $("#txtreceta").val("");
                $("#cmbIngrediente1").val("0");
                $("#cmbIngrediente2").val("0");
                $("#cmbIngrediente3").val("0");
                $("#cmbIngrediente4").val("0");
                $("#cmbCategoria").val("0");
                $("#txtprecio").val("");
                $("#cmbActivo").val(1);

                $("#mensajeError").hide();

            }

            $("#formModal").modal("show")

        }

        $("#tabla tbody").on("click", '.btn-editar', function () {

            filaSeleccionada = $(this).closest("tr");

            var data = (tablaData.row(filaSeleccionada).data());

            abrirModal(data)
        })

        $("#tabla tbody").on("click", '.btn-eliminar', function () {

            ingredienteSeleccionado = $(this).closest("tr");

            var data = tablaData.row(ingredienteSeleccionado).data();

            swal({
                title: "¿Desea Eliminar el Ingrediente??",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-success",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
                function () {

                    jQuery.ajax({
                        url: '@Url.Action("EliminarIngrediente", "Mantenedor")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IdIngrediente}),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            if (data.resultado) {

                                tablaData.row(ingredienteSeleccionado).remove().draw();

                            } else{
                                swal("No se pudo eliminar", data.mensaje, "error")
                            }



                        },
                        error: function (error) {
                            console.log(error);
                        },
                        beforeSend: function () {
                            tablaData.ajax.reload();
                        },
                    })

                });

            console.log(data);
        })



        function Guardar() {


            var ImagenSeleccionada = $("#fileProducto")[0].files[0];

            var Producto = {
                IdProducto: $("#txtid").val(),
                NombreProducto: $("#txtnombre").val(),
                Receta: $("#txtReceta").val(),
                oIngrediente: {
                    IdIngrediente : $("#cmbIngrediente1 option:selected").val(),
                    Descripcion: $("#cmbIngrediente1 option:selected").text()
                },
                oIngrediente1: {
                    IdIngrediente: $("#cmbIngrediente2 option:selected").val(),
                    Descripcion: $("#cmbIngrediente2 option:selected").text()
                },
                oIngrediente2: {
                    IdIngrediente: $("#cmbIngrediente3 option:selected").val(),
                    Descripcion: $("#cmbIngrediente3 option:selected").text()
                },
                oIngrediente3: {
                    IdIngrediente: $("#cmbIngrediente4 option:selected").val(),
                    Descripcion: $("#cmbIngrediente4 option:selected").text()
                },
                oCategoria: {
                    IdCategoria: $("#cmbCategoria option:selected").val(),
                    Descripcion: $("#cmbCategoria option:selected").text()
                },
                Precio: $("#txtprecio").val(),
                Activo: $("#cmbActivo").val() == 1 ? true : false
            }

            var request = new FormData();
            request.append("objeto", JSON.stringify(Producto));
            request.append("archivoImagen", ImagenSeleccionada);

            jQuery.ajax({
                url: '@Url.Action("GuardarProducto", "Mantenedor")',
                type: "POST",
                data: request,
                processData: false,
                contentType: false,
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide");

                 //Producto nuevO
                    if (Producto.IdProducto == 0) {

                        if (data.idGenerado != 0) {
                            Producto.IdProducto = data.idGenerado;
                            tablaData.row.add(Producto).draw(false);
                            $("#formModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();

                        }
                    }
                    //editar Producto
                    else {

                        if (data.operacionExitosa) {
                            tablaData.row(filaSeleccionada).data(Producto).draw(false);
                            filaSeleccionada = null;
                            $("#formModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {

                    $(".modal-body").LoadingOverlay("hide");

                    $("#mensajeError").text("ERROR AJAX");
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    });
                }
            })





        }



