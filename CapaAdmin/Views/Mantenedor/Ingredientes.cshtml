@{
    ViewBag.Title = "Ingredientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Ingredientes</h2>
<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Ingrediente</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1">
        </i> Lista de Ingredientes
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Ingrediente</button>
            </div>
        </div>
    </div>

    <hr />

    <table id="tabla" class="display d-print-table-cell" style="width: 100%">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Activo</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Ingredientes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtid" type="text" value="0" />

                <div class="row g-1">
                    <div class="col-sm-6">
                        <label for="txtDescripcion" class="form-label">Descripción</label>
                        <input type="text" class="form-control" id="txtDescripcion" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="cmbActivo" class="form-label">Activo</label>
                        <select id="cmbActivo" class="form-select">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>


                </div>


                <!--Mensaje de alerta-->
                <div class="row mt-3">
                    <div class="col-12">

                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            This is a danger alert—check it out!
                        </div>

                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>


        var tablaData;
        var filaSeleccionada;
        var ingredienteSeleccionado;

        tablaData = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarIngredientes", "Mantenedor")',
                type: "GET",
                dataType: "json"
            },
            "columns": [

                { "data": "Descripcion" },
                {
                    "data": "Activo", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">Si</span>'
                        } {
                            return '<span class="badge bg-danger">No</span>'
                        }
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "70px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
            }

        });

        function abrirModal(json) {

            if (json != null) {

                $("#txtid").val(json.IdIngrediente);
                $("#txtDescripcion").val(json.Descripcion);
                $("#cmbActivo").val(json.Activo == true ? 1 : 0);

                $("#mensajeError").hide();



            } else {

                $("#txtid").val(0);
                $("#txtDescripcion").val("");
                $("#cmbActivo").val(1);

                $("#mensajeError").hide();

            }

            $("#formModal").modal("show")

        }

        $("#tabla tbody").on("click", '.btn-editar', function () {

            filaSeleccionada = $(this).closest("tr");

            var data = (tablaData.row(filaSeleccionada).data());

            abrirModal(data)
        })

        $("#tabla tbody").on("click", '.btn-eliminar', function () {

            ingredienteSeleccionado = $(this).closest("tr");

            var data = tablaData.row(ingredienteSeleccionado).data();

            swal({
                title: "¿Desea Eliminar el Ingrediente??",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-success",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
                function () {

                    jQuery.ajax({
                        url: '@Url.Action("EliminarIngrediente", "Mantenedor")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IdIngrediente}),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            if (data.resultado) {

                                tablaData.row(ingredienteSeleccionado).remove().draw();

                            } else{
                                swal("No se pudo eliminar", data.mensaje, "error")
                            }



                        },
                        error: function (error) {
                            console.log(error);
                        },
                        beforeSend: function () {
                            tablaData.ajax.reload();
                        },
                    })

                });

            console.log(data);
        })
        
        function Guardar() {

            var Ingrediente = {
                IdIngrediente: $("#txtid").val(),
                Activo: $("#cmbActivo").val() == 1 ? true: false,
                Descripcion: $("#txtDescripcion").val()
            }

            jQuery.ajax({
                url: '@Url.Action("GuardarIngrediente", "Mantenedor")',
                type: "POST",
                data: JSON.stringify({objeto : Ingrediente}),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide");

                 //INGREDIENTE nuevO
                    if (Ingrediente.IdIngrediente == 0) {

                        if (data.resultado != 0) {
                            Ingrediente.IdIngrediente = data.resultado;
                            tablaData.row.add(Ingrediente).draw(false);
                            $("#formModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();

                        }
                    }
                    //editar INGREDIENTE
                    else {

                        if (data.resultado) {
                            tablaData.row(filaSeleccionada).data(Ingrediente).draw(false);
                            filaSeleccionada = null;
                            $("#formModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {

                    $(".modal-body").LoadingOverlay("hide");

                    $("#mensajeError").text("ERROR AJAX");
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    });
                }
            })





        }




    </script>
}




